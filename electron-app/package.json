{
    "name": "Samsung TV Remote",
    "version": "1.0.0",
    "description": "Samsung Smart TV Remote",
    "main": "src/main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron .",
        "build:mac": "electron-builder --mac",
        "pack:mac": "electron-builder --mac dir"
    },
    "author": "You",
    "license": "MIT",
    "dependencies": {
        "ws": "^8.18.0"
    },
    "devDependencies": {
        "electron": "^30.0.0",
        "electron-builder": "^24.13.3"
    },
    "build": {
        "appId": "com.yourname.samsungtvremote",
        "productName": "Samsung TV Remote",
        "files": [
            "src/**/*",
            "package.json"
        ],
        "mac": {
            "category": "public.app-category.utilities",
            "target": [
                "dmg"
            ]
        },
        "directories": {
            "buildResources": "build"
        }
    }
}